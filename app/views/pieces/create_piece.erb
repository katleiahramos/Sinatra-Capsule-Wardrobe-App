<a class="btn btn-primary" href="/users/<%= current_user.id %>" role="button">Back to Home</a>
<h1>Create a piece!</h1>

<form class="" action="/pieces" method="post">
  <input type="hidden" name="user_id" value="<%= @user.id %>">
  <input type="text" name="description" value="Description">
  <input type="text" name="price" value="Price">
  <br><br>
  <% Category.all.each do |category| %>
  <input type="radio" name="category_id" value="<%= category.id %>"><%= category.name %></input>
  <% end %>

  <br><br>
  <input type="submit" value="Create Piece">
</form>
