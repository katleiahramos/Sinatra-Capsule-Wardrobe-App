 <!-- show all pieces -->


 <a href="/pieces/all">All Pieces</a>

 <div class="row">
 <% @user.pieces.each do |piece| %>
   <div class="col-sm-4">


   <h2>  <a href="/pieces/<%= piece.id %>"><%= piece.description %></a>  </h2>
   <li>
     <ul><%= piece.price %></ul>
     <ul><%= piece.size %></ul>
       <ul><%= piece.category.name %></ul>
      </li>
     <br>

   <form class="" action="/pieces/<%= piece.id %>/delete" method="post">
   <input id="hidden" type="hidden" name="_method" value="delete">
     <input type="submit" value="DELETE">
   </form>

   <form action="/pieces/<%= piece.id %>/edit" method="get">
     <input type="submit" value="EDIT">
   </form>

     <form action="/capsule/<%= @user.capsule.id %>/add/<%= piece.id %>" method="post">
       <input id="hidden" type="hidden" name="_method" value="PATCH">
       <input type="submit" value="ADD TO CAPSULE">
     </form>
       </div>
 <% end %>

   </div>
   <!-- ALL PIECES END  -->


 <a href="/pieces/new">Create A Piece!</a>
